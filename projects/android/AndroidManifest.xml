<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="org.safermobile.intheclear"
      android:versionCode="1"
      android:versionName="1.0">
    <uses-sdk android:minSdkVersion="7" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.SEND_SMS" />
    <uses-permission android:name="android.permission.READ_SMS" />
    <uses-permission android:name="android.permission.WRITE_SMS" />
	<uses-permission android:name="android.permission.READ_CONTACTS" />
	<uses-permission android:name="android.permission.WRITE_CONTACTS" />
	
    <application android:icon="@drawable/setup" android:label="@string/app_name">
        <activity android:name=".InTheClear"
                  android:label="@string/app_name"
                  android:theme="@android:style/Theme.NoTitleBar"
                  android:configChanges="orientation|keyboardHidden"
                  android:screenOrientation="portrait">
            <intent-filter>
            	<action android:name=".InTheClear" />
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Wizard"
        		   android:icon="@drawable/setup"
        		    android:label="InTheClear"
        		  android:theme="@android:style/Theme.NoTitleBar"
        		  android:configChanges="orientation|keyboardHidden"
                  android:screenOrientation="portrait">
        	<intent-filter>
        		<action android:name=".Wizard" />
        		<action	android:name="android.intent.action.MAIN" />
        	</intent-filter>
        </activity>
        <activity android:name=".screens.FolderSelector"
        		  android:configChanges="orientation|keyboardHidden"
        		  android:screenOrientation="portrait"
        		  android:theme="@style/Theme.CustomDialog">
        	<intent-filter>
        		<action android:name=".screens.FolderSelector" />
        		<action android:name="android.intent.action.MAIN" />
        	</intent-filter>
        
        </activity>
        <activity android:name=".ITCPreferences"></activity>
         <activity android:name=".apps.Panic"
         		android:icon="@drawable/panic"
                  android:label="Panic!"
                  android:taskAffinity=".apps.Panic"
                  android:theme="@android:style/Theme.NoTitleBar"
                  android:configChanges="orientation|keyboardHidden"
                  android:screenOrientation="portrait">
            <intent-filter>
            	<action android:name=".apps.Panic" />
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".apps.Shout"
         		android:icon="@drawable/shout"
                  android:label="SHOUT!"
                  android:taskAffinity=".apps.Shout"
                  android:theme="@android:style/Theme.NoTitleBar"
                  android:configChanges="orientation|keyboardHidden"
                  android:screenOrientation="portrait">
            <intent-filter>
            	<action android:name=".apps.Shout" />
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".apps.Wipe"
         		android:icon="@drawable/wipe"
                  android:label="WIPE!"
                  android:taskAffinity=".apps.Wipe"
                  android:theme="@android:style/Theme.NoTitleBar"
                  android:configChanges="orientation|keyboardHidden"
                  android:screenOrientation="portrait">
            <intent-filter>
            	<action android:name=".apps.Wipe" />
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

    </application>
</manifest>
