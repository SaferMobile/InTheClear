<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:weightSum="1.0"
    android:background="#ffffff" >
	<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent"
  	android:layout_height="0dip"
 	android:layout_weight="0.15"
 	android:weightSum="1.0"
  	android:orientation="horizontal"
  	android:gravity="center_vertical">
  		<ImageView
  			android:layout_width="0dip"
  			android:layout_height="wrap_content"
  			android:layout_weight="0.25"
  			android:layout_marginLeft="20dip"
  			android:layout_marginRight="20dip"
  			android:src="@drawable/sm3cropped" />
  		<TextView 
  			android:layout_width="0dip"
  			android:layout_height="wrap_content"
  			android:layout_weight="0.75"
  			android:textSize="26dip"
  			android:textColor="#ff000000"
  			android:text="@string/KEY_WIPE_ACTIVITY_TITLE"
  			android:id="@+id/wipeTitle" />
  	</LinearLayout>
  	<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
		android:layout_width="fill_parent"
	  	android:layout_height="0dip"
	 	android:layout_weight="0.7"
	  	android:orientation="vertical">
		<TextView
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:textColor="#ff000000"
			android:text="@string/KEY_WIPE_ACTIVITYTEXT"
			android:layout_marginBottom="20dip"
			android:layout_marginLeft="5dip"
			android:layout_marginRight="5dip" />
		<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
			android:layout_width="fill_parent"
	  		android:layout_height="wrap_content"
	  		android:id="@+id/wipeDisplayHolder"
	  		android:orientation="vertical" />
	</LinearLayout>
 	<LinearLayout
	 	android:layout_width="fill_parent"
	 	android:layout_height="0dip"
	 	android:layout_weight="0.15"
	 	android:id="@+id/wipeOptions"
	 	android:orientation="horizontal"
	 	android:weightSum="1.0"
	 	android:gravity="bottom">
	 		<Button
	 			android:layout_width="0dip"
	 			android:layout_height="fill_parent"
	 			android:layout_weight="0.5"
	 			android:text="@string/KEY_WIPE_EDIT_WIPE"
	 			android:id="@+id/overrideWipePreferences" />
	 		<Button
	 			android:layout_width="0dip"
	 			android:layout_height="fill_parent"
	 			android:layout_weight="0.5"
	 			android:text="@string/KEY_WIPE_BTN_TITLE"
	 			android:id="@+id/wipeButton" />
	 </LinearLayout>
</LinearLayout>
